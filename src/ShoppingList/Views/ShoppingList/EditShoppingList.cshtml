@model ShoppingList.ViewModels.EditShoppingListViewModel
@using Newtonsoft.Json
@{
    ViewData["Title"] = "Edit Shopping List";
}


<script type="text/javascript">

    var selectedItems = @Html.Raw(JsonConvert.SerializeObject(this.Model.SelectedItems.ToArray()));

    function Click(itemName) {
        var selectedGroup = document.getElementById('selectedGroup');
        var availableGroup = document.getElementById('availableGroup');
        var item = document.getElementById(itemName);

        if (selectedGroup.contains(item)) {
            // unselect
            availableGroup.appendChild(item);
            var index = selectedItems.indexOf(itemName);
            if (index >= 0) {
                selectedItems.splice(index, 1);
            }
        } else if (availableGroup.contains(item)) {
            // select
            selectedItems.push(itemName);
            selectedGroup.appendChild(item);
        }
    }


    function Save() {
        var store = document.getElementById("StoreSelection").value;
        if (store == null || store == "") {
            var warning = document.getElementById("SelectStoreWarning");
            warning.textContent = "Select a store";
            return;
        }

        var parameters = "shoppingListId=" + "@Model.ShopplingListId.ToString()" + "&storeName=" + store + "&itemsToBuyJoined="  + selectedItems.join("§");
        var postUrl = "@Url.Action("SaveShoppingList", "ShoppingList")?" + parameters;
        $.post(postUrl, function(data) {
            window.location.href = "@Url.Action("ViewShoppingLists", "ShoppingList")";
        });
    }

    function CreateItem() {
        var textField = document.getElementById('NewItemField');
        var itemName = textField.value;
        textField.value = null;
        if (itemName == null || itemName == "")
            return;

        itemName = itemName.toLowerCase();

        var existingField = document.getElementById(itemName);
        if (existingField != null) {
            Click(itemName);
            return;
        }

        // create new element
        @*Template: <a id="@item" onclick="Click('@item'); return false;" href="#" class="list-group-item">@item</a>*@
        var element = document.createElement('a');
        element.textContent = itemName;
        element.setAttribute('class', 'list-group-item');
        element.setAttribute('onclick', 'Click("' + itemName + '"); return false;');
        element.setAttribute('href', '#');
        element.setAttribute('id', itemName);

        selectedItems.push(itemName);
        var selectedGroup = document.getElementById('selectedGroup');
        selectedGroup.appendChild(element);
    }
</script>

<h2><span class="label label-default">@Model.Header</span></h2>

<div>
    <button type="button" class="btn btn-success" onclick="Save()">Save</button>
    <a asp-controller="ShoppingList" asp-action="ViewShoppingLists" class="btn btn-danger">Cancel</a>
</div>

<div class="container">
    <div class="row">
        <div class='col-xs-6'>
            <h3>Store</h3>
            <select class="form-control" id="StoreSelection">
                @foreach (var store in Model.AvailableStores) {
                    <option selected="@Model.SelectedStore.Name.Equals(store.Name)">@store.Name</option>
                }
            </select>
            <span id="SelectStoreWarning" class="label label-danger"></span>
        </div>
        <div class='col-xs-6'>
            <h3>New Item</h3>
            <div class="input-group">
                <input id="NewItemField" type="text" class="form-control" placeholder="chocolate..."
                     onkeydown="if (event.keyCode == 13) CreateItem()" />
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" onclick="CreateItem()">Add!</button>
                </span>
            </div>
        </div>
    </div>

    <div class="row">

        <!-- Available items -->
        <div class="col-xs-6">
            <div class="list-group" id="availableGroup">
                <H3>Items</H3>
                @foreach (var item in Model.AvailableItems) {
                    <a id="@item" onclick="Click('@item'); return false;" href="#" class="list-group-item">@item</a>
                }
            </div>
        </div>

        <!-- To buy -->
        <div class="col-xs-6">
            <div class="list-group" id="selectedGroup">
                <H3>To Buy</H3>
                @foreach (var item in Model.SelectedItems) {
                    <a id="@item" onclick="Click('@item'); return false;" href="#" class="list-group-item">@item</a>
                }                
            </div>
        </div>
    </div>

</div>



